<h1>Places</h1>

<% if current_user %>
  <!-- If signed in, display the places -->
  <% @places.each do |place| %>
    <p><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></p>
  <% end %>
<% else %>
  <!-- Not signed in, show no places -->
  <p>No places available. Please log in to see your places.</p>
<% end %>

<!-- The New Place button is always visible.
     When clicked, the PlacesController#new will check login and redirect if needed -->
<a href="/places/new" class="btn btn-primary">New Place</a>
