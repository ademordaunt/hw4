<h1><%= @place["name"] %></h1>

<h2>My Entries</h2>
<% if @entries.present? %>
  <% @entries.each do |entry| %>
    <h3><%= entry["title"] %></h3>
    <h4><%= entry["occurred_on"] %></h4>
    <p><%= entry["description"] %></p>
    
    <% if entry.uploaded_image.attached? %>
      <%= image_tag url_for(entry.uploaded_image), class: "img-fluid", alt: "Entry Image" %>
    <% elsif entry["image"].present? %>
      <img src="<%= entry["image"] %>" class="img-fluid" alt="Legacy Entry Image">
    <% end %>

    
  <% end %>
<% else %>
  <p>No entries available for this place.</p>
<% end %>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Entry</a>
</p>

<p>
  <a href="/places" class="btn btn-secondary">Back to All Places</a>
</p>
