<h1><%= @place["name"] %></h1>

<h2>My Entries</h2>
<% if @entries.present? %>
  <div class="row">
    <% @entries.each do |entry| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if entry.uploaded_image.attached? %>
            <%= image_tag url_for(entry.uploaded_image), class: "card-img-top", alt: "Entry Image" %>
          <% elsif entry["image"].present? %>
            <img src="<%= entry["image"] %>" class="card-img-top" alt="Legacy Entry Image">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= entry["title"] %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= entry["occurred_on"] %></h6>
            <p class="card-text"><%= entry["description"] %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No entries available for this place.</p>
<% end %>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Entry</a>
</p>

<p>
  <a href="/places" class="btn btn-secondary">Back to All Places</a>
</p>
